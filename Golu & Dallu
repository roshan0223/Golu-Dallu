  <script>
    function showLetter() {
      document.getElementById('questionBox').style.display = 'none';
      document.getElementById('letterBox').style.display = 'block';
    }

    function showNoMessage() {
      document.getElementById('questionBox').style.display = 'none';
      document.getElementById('noMessage').style.display = 'block';
